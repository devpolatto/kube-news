pipeline {
     agent any

     stages {
          stage('Build Docker Image') {
               steps {
                    script {
                         dockerapp = docker.build("devpolatto/kube-news:1.0.${env.BUILD_ID}", '-f ./src/Dockerfile ./src')
                    }
               }
          }

          stage ('Push Docker Image') {
               steps {
                    script {
                         withDockerRegistry('https://registry.hub.docker.com/','cred') {
                              dockerapp.push('latest')
                              dockerapp.push("1.0.${env.BUILD_ID}")
                         }
                    }
               }
          }
     }
}